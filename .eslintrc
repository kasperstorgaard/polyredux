{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [ "html" ],
    "env": {
        "browser": true,
        "mocha": true
    },
    "globals": {
        "angular": true,
        "sinon": true,
        "expect": true,
        "R": true,
        "Polymer": true,
        "fixture": true
    },
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "space-before-function-paren": ["warn", {
            "anonymous": "always",
            "named": "always"
        }],
        "max-len": [2, 100, 2, {
            "ignoreUrls": true,
            "ignoreComments": false,
            "ignorePattern": "^\\import\\s.*"
        }],
        "no-underscore-dangle": 0,
        "new-cap": ["error", { "capIsNewExceptions": [ "Polymer" ] }],
        "no-unused-expressions": 0
    }
}
